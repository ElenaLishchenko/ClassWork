@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        <h3>Форма редактирования данных</h3>
        <form method="post" action="">
            <input type="hidden" value="@ViewBag.UserId" name="UserId" />
            <table>
                <tr>
                    <td><p>Имя </p></td>
                    <td><input type="text" name="Name" value="@ViewBag.UserName" /> </td>
                </tr>
                <tr>
                    <td><p>Отчество :</p></td>
                    <td>
                        <input type="text" name="Patronymic" value="@ViewBag.UserPatronymic" />
                    </td>
                </tr>
                <tr>
                    <td><p>Фамилия :</p></td>
                    <td>
                        <input type="text" name="Surname" value="@ViewBag.UserSurname" />
                    </td>
                </tr>
                <tr>
                    <td><p>Телефон :</p></td>
                    <td>
                        <input type="text" name="PhoneNumber" value="@ViewBag.UserPhoneNumber" />
                    </td>
                </tr>
                <tr>
                    <td><p>Эл.почта :</p></td>
                    <td>
                        <input type="text" name="Email" value="@ViewBag.UserEmail" />
                    </td>
                </tr>
                <tr><td><input type="submit" value="Сохранить" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>
